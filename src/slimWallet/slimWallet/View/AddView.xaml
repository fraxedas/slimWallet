<?xml version="1.0" encoding="UTF-8"?>

<base:BaseView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:base="clr-namespace:slimWallet.Base;assembly=slimWallet"
    x:Class="slimWallet.View.AddView">

    <ContentPage.ToolbarItems>

        <ToolbarItem
            Icon="front.png"
            Command="{Binding FrontCommand}" />

        <ToolbarItem
            Icon="back.png"
            Command="{Binding BackCommand}" />

        <ToolbarItem
            Icon="save.png"
            Command="{Binding SaveCommand}" />

        <ToolbarItem
            Icon="remove.png"
            Command="{Binding RemoveCommand}"/>

    </ContentPage.ToolbarItems>

    <ContentPage.Content>

        <ScrollView>

            <StackLayout Spacing="10">

                <Entry
                    Placeholder = "Card name"
                    Text="{Binding Model.Selected.Name, Mode=TwoWay}" />
                
                <Image
                    Source="{Binding Model.Selected.FrontImage, Mode=OneWay, Converter={StaticResource ImageSource}}">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer
                            Command="{Binding TapCommand}"
                            CommandParameter="front" />
                    </Image.GestureRecognizers>
                 </Image>

                <Image
                    Source="{Binding Model.Selected.BackImage, Mode=OneWay, Converter={StaticResource ImageSource}}" >
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer
                            Command="{Binding TapCommand}"
                            CommandParameter="back" />
                    </Image.GestureRecognizers>
                </Image>

            </StackLayout>

        </ScrollView>

    </ContentPage.Content>

</base:BaseView>
